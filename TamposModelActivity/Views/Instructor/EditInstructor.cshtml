@model Instructor;

@{
    ViewData["Title"] = "Add Instructor";
}

<!DOCTYPE html>

<h3>Add Instructor</h3>

<form asp-action="EditInstructor">
    <div class="mb-3">
        <label asp-for="Id" class="form-label">Id</label>
        <input asp-for="Id" class="form-control"/>
    </div>
    <div class="row mb-3">
        <div class="col">
            <label asp-for="FirstName" class="form-label">First Name</label>
            <input asp-for="FirstName" type="text" class="form-control">
        </div>
        <div class="col">
            <label asp-for="LastName" class="form-label">Last Name</label>
            <input asp-for="LastName" type="text" class="form-control">
        </div>
    </div>
    <div class="mb-3">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" asp-for="IsTenured">
          <label class="form-check-label" asp-for="IsTenured">
            Is tenured?
          </label>
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="Rank" class="form-label">Rank</label>
        <select asp-for="Rank" class="form-select" asp-items="Html.GetEnumSelectList<Rank>()" aria-label="Rank"></select>
    </div>
    <div class="mb-3">
        <label asp-for="HiringDate" class="form-label">Hiring Date</label>
        <input asp-for="HiringDate" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>